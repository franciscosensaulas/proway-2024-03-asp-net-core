<h2>Lista de estantes</h2>

<div class="row mb-2">
    <div class="col">
        <a asp-controller="Estante" asp-action="Novo" class="btn btn-primary float-end">
            <i class="fa-solid fa-plus"></i> Nova Estante
        </a>
    </div>
</div>

<table class="table table-striped table-bordered">
    <thead>
        <tr>
            <th>Código</th>
            <th>Nome</th>
            <th>Sigla</th>
            <th>Ação</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var estante in ViewBag.Estantes)
        {
            <tr>
                <td>@estante.Id</td>
                <td>@estante.Nome</td>
                <td>@estante.Sigla</td>
                <td>
                    <a href="/estante/editar?id=@estante.Id"
                       class="btn btn-primary">
                        <i class="fa-solid fa-pencil"></i> Editar
                    </a>
                    <a href="/estante/apagar?id=@estante.Id"
                       class="btn btn-outline-danger">
                        <i class="fa-solid fa-trash"></i> Apagar
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>